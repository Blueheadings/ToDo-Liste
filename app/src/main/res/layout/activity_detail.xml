<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <EditText
        android:id="@+id/editTextTitle"
        android:hint="Titel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Beschreibung"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priorität:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/priorityHighBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hoch"/>

        <Button
            android:id="@+id/priorityMiddleBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mittel"/>

        <Button
            android:id="@+id/priorityLowBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Niedrig"/>

    </LinearLayout>

    <Button
        android:id="@+id/AblaufDatumBtn"
        android:text="AblaufDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
    android:id="@+id/hinzufügenBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="hinzufügen"/>

</LinearLayout>